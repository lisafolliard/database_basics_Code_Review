<form action="/stylists/<%= @stylist.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <div class="form-group">
    <label for="name">Edit Stylist Name:</label>
    <input class="form-control" type="text" name="name" value="<%= @stylist.name %>">
  </div>

    <button class='btn-default' type="submit">Save</button>
</form>
