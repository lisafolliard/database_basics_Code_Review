<h2>Client Page for <i> <%= @stylist.name %> </i></h2>

<p><a href="/stylists/<%= @stylist.id() %>/edit">Edit Stylist Name</a></p>

<form action="/stylists/<%= @stylist.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button name="button" class="btn btn-danger">Delete Stylist</button>
</form>

</br>
<!-- <h2><%= @stylist.name() %></h2> -->
  <% if @stylist.clients().any? %>
    <h3>Here are all the clients for this stylist:</h3>
      <ul>
         <% @stylist.clients().each() do |client| %>
          <!-- add back here -->
          <li><a href='/client/<%= client.id() %>'><%= client.name() %></a></li>
  <% end %>
      </ul>
  <% else %>
    <h3>This stylist has no clients</h3>
  <% end %>

</br>

  <form action="/stylists/<%= @stylist.id() %>" method="post">
    <input id="stylist_id" name="stylist_id" type="hidden" value="<%= @stylist.id() %>">

    <div class='form-group'>
      <label for='name'>Client Name</label>
      <input id='name' name='name' type='text' class='form-control'>

 </br>

